{% extends 'base.html.twig' %}

{% block title %}Posts List!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Create new post</h1>
    <form action="{{ path('save_post') }}" method="post">
        <input type="hidden" name="token" value="{{ csrf_token('save_post') }}" />
        <div>
            <p><label for="#">Title</label></p>
            <input type="text" name="title">
        </div>
        <div>
            <p><label for="#">content</label></p>
            <textarea type="text" name="content" rows="7" cols="90"></textarea>
        </div>
        <br>
        <button>Save</button>
    </form>
</div>
{% endblock %}
